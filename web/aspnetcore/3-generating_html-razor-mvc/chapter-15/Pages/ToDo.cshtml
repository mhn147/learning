@page
@model ToDoModel
@{
    ViewData["Title"] = "To Do";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Add New Task</h1>
            <form method="POST">
                <div class="mb-3">
                    <label asp-for="Todo" class="form-label">Task</label>
                    <input class="form-control" asp-for="Todo">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-6">
            <div class="row">

                <h2>Todos</h2>
                <ul>
                    @foreach (var todo in Model.Todos)
                    {
                        <li>@todo.Content</li>
                    }
                </ul>
            </div>
            <div class="row">
                <h3>Category</h3>
                <p>xxx</p>
                <h3>Username</h3>
                <p>xxx</p>
            </div>
        </div>
    </div>
</div>